    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Debug Behave Integration Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "behave",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/tests/integration",
            "env": {
                "PYTHONPATH": "../.."
            },
            "args": [
                "--stop",
                "--tags=@1,27,30",
                "--tags=@minio",
                //"--tags=@local,@minio,@1,27,30",
                "-D",
                "cassandra-version=4.1.9"
            ]
        }
    ]
}